// ─── ENUMS ────────────────────────────────────────────────────────────

export enum NivelJerarquico {
  Operativo = 1,
  Supervisor = 2,
  Gerencia = 3,
  Direccion = 4
}

export enum TipoContrato {
  Indefinido = 1,
  PlazoFijo = 2,
  ObraCierta = 3,
  Pasantia = 4
}

export enum ModalidadTrabajo {
  Presencial = 1,
  Remoto = 2,
  Hibrido = 3
}

export enum JornadaLaboral {
  Completa = 1,
  Parcial = 2
}

export enum EstadoEmpleado {
  Activo = 1,
  Licencia = 2,
  Vacaciones = 3,
  Egresado = 4
}

export enum Genero {
  Masculino = 1,
  Femenino = 2,
  Otro = 3
}

export enum EstadoCivil {
  Soltero = 1,
  Casado = 2,
  Divorciado = 3,
  Viudo = 4,
  UnionLibre = 5
}

export enum TipoIdentificacion {
  Cedula = 'CEDULA',
  Pasaporte = 'PASAPORTE',
  RUC = 'RUC',
  DNI = 'DNI'
}

export enum TipoCuentaBancaria {
  Ahorros = 1,
  Corriente = 2
}

// ─── DEPARTAMENTO ─────────────────────────────────────────────────────

export interface DepartamentoDto {
  id: number;
  empresaId: number;
  departamentoPadreId?: number;
  departamentoPadreNombre?: string;
  codigo: string;
  nombre: string;
  descripcion?: string;
  responsableId?: number;
  responsableNombre?: string;
  presupuestoAnual?: number;
  nivel: number;
  activo: boolean;
  totalEmpleados?: number;
}

export interface CrearDepartamentoRequest {
  empresaId: number;
  departamentoPadreId?: number;
  codigo: string;
  nombre: string;
  descripcion?: string;
  responsableId?: number;
  presupuestoAnual?: number;
}

export type ActualizarDepartamentoRequest = CrearDepartamentoRequest & { id: number };

// ─── PUESTO ───────────────────────────────────────────────────────────

export interface PuestoDto {
  id: number;
  empresaId: number;
  departamentoId: number;
  departamentoNombre: string;
  codigo: string;
  nombre: string;
  descripcion?: string;
  nivelJerarquico: NivelJerarquico;
  nivelJerarquicoNombre?: string;
  bandaSalarialMin?: number;
  bandaSalarialMax?: number;
  requiereTitulo: boolean;
  activo: boolean;
  totalEmpleados?: number;
}

export interface CrearPuestoRequest {
  empresaId: number;
  departamentoId: number;
  codigo: string;
  nombre: string;
  descripcion?: string;
  nivelJerarquico: NivelJerarquico;
  bandaSalarialMin?: number;
  bandaSalarialMax?: number;
  requiereTitulo: boolean;
}

export type ActualizarPuestoRequest = CrearPuestoRequest & { id: number };

// ─── EMPLEADO ─────────────────────────────────────────────────────────

export interface EmpleadoDto {
  id: number;
  empresaId: number;
  sucursalId?: number;
  codigo: string;
  tipoIdentificacion: string;
  numeroIdentificacion: string;
  primerNombre: string;
  segundoNombre?: string;
  primerApellido: string;
  segundoApellido?: string;
  nombreCompleto: string;
  fechaNacimiento?: string;
  genero?: Genero;
  estadoCivil?: EstadoCivil;
  emailPersonal?: string;
  emailCorporativo?: string;
  telefonoCelular?: string;
  telefonoFijo?: string;
  direccion?: string;
  departamentoId?: number;
  departamentoNombre?: string;
  puestoId?: number;
  puestoNombre?: string;
  jefeDirectoId?: number;
  jefeDirectoNombre?: string;
  fechaIngreso: string;
  fechaEgreso?: string;
  tipoContrato: TipoContrato;
  tipoContratoNombre?: string;
  modalidadTrabajo: ModalidadTrabajo;
  jornadaLaboral: JornadaLaboral;
  horasSemanales: number;
  salarioBase: number;
  numeroSeguroSocial?: string;
  bancoId?: number;
  bancoNombre?: string;
  tipoCuentaBancaria?: TipoCuentaBancaria;
  numeroCuentaBancaria?: string;
  estado: EstadoEmpleado;
  estadoNombre?: string;
  fotoUrl?: string;
  activo: boolean;
}

export interface CrearEmpleadoRequest {
  empresaId: number;
  sucursalId?: number;
  tipoIdentificacion: string;
  numeroIdentificacion: string;
  primerNombre: string;
  segundoNombre?: string;
  primerApellido: string;
  segundoApellido?: string;
  fechaNacimiento?: string;
  genero?: Genero;
  estadoCivil?: EstadoCivil;
  emailPersonal?: string;
  emailCorporativo?: string;
  telefonoCelular?: string;
  telefonoFijo?: string;
  direccion?: string;
  departamentoId?: number;
  puestoId?: number;
  jefeDirectoId?: number;
  fechaIngreso: string;
  tipoContrato: TipoContrato;
  modalidadTrabajo: ModalidadTrabajo;
  jornadaLaboral: JornadaLaboral;
  horasSemanales: number;
  salarioBase: number;
  numeroSeguroSocial?: string;
  bancoId?: number;
  tipoCuentaBancaria?: TipoCuentaBancaria;
  numeroCuentaBancaria?: string;
}

export type ActualizarEmpleadoRequest = CrearEmpleadoRequest & { id: number };

