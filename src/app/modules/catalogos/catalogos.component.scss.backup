// =============================================
// CATALOGOS - Layout con sidebar
// =============================================

.catalogos-layout {
  display: flex;
  height: 100%;
  min-height: 0;
  overflow: hidden;
}

// ─── SIDEBAR ────────────────────────────────
.cat-sidebar {
  width: 220px;
  flex-shrink: 0;
  background: var(--surface-card);
  border-right: 1px solid var(--surface-border);
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}

.cat-sidebar-header {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 1.25rem 1rem;
  font-weight: 700;
  font-size: 0.8rem;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  color: var(--text-color-secondary);
  border-bottom: 1px solid var(--surface-border);

  i { font-size: 0.9rem; }
}

.cat-nav {
  padding: 0.5rem 0;
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.cat-nav-item {
  display: flex;
  align-items: center;
  gap: 0.625rem;
  padding: 0.6rem 1rem;
  margin: 0 0.5rem;
  border-radius: 8px;
  font-size: 0.875rem;
  color: var(--text-color-secondary);
  text-decoration: none;
  transition: background 0.15s ease, color 0.15s ease;
  cursor: pointer;

  i {
    font-size: 0.9rem;
    width: 18px;
    text-align: center;
    flex-shrink: 0;
  }

  &:hover {
    background: var(--surface-hover);
    color: var(--text-color);
  }

  &.active {
    background: var(--primary-color);
    color: #fff;
    font-weight: 600;
  }
}

// ─── CONTENIDO ──────────────────────────────
.cat-content {
  flex: 1;
  min-width: 0;
  overflow-y: auto;
  background: var(--surface-ground);
}
